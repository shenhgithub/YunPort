<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:background="@drawable/list_view_item_select_background"
              android:layout_width="match_parent"
              android:layout_height="@dimen/navigation_drawer_list_item_height">

    <ImageView
        android:id="@+id/navigation_drawer_menu_item_function_image"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/navigation_drawer_menu_item_function_name"
        android:layout_marginLeft="5dp"
        android:text="功能名"
        android:textSize="@dimen/navigation_drawer_list_item_function_title_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>